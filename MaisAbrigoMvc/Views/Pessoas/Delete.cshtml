@model MaisAbrigo.Model.Pessoa

@{
    ViewData["Title"] = "Excluir Pessoa";
}

<h2>@ViewData["Title"]</h2>

<h3>Tem certeza que deseja excluir esta pessoa?</h3>
<div>
    <h4>Pessoa</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Nome</dt>
        <dd class="col-sm-10">@Model.Nome</dd>

        <dt class="col-sm-2">Idade</dt>
        <dd class="col-sm-10">@Model.Idade</dd>

        <dt class="col-sm-2">Sexo</dt>
        <dd class="col-sm-10">@Model.sexo</dd>

        <dt class="col-sm-2">Abrigo</dt>
        <dd class="col-sm-10">@Model.Abrigos?.Nome</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
