@{
}
@model MaisAbrigo.Model.Pessoa

@{
    ViewData["Title"] = "Detalhes da Pessoa";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h4>Pessoa</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Nome</dt>
        <dd class="col-sm-10">@Model.Nome</dd>

        <dt class="col-sm-2">Idade</dt>
        <dd class="col-sm-10">@Model.Idade</dd>

        <dt class="col-sm-2">Sexo</dt>
        <dd class="col-sm-10">@Model.sexo</dd>

        <dt class="col-sm-2">Abrigo</dt>
        <dd class="col-sm-10">@Model.Abrigos?.Nome</dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Editar</a> |
    <a asp-action="Index">Voltar à Lista</a>
</div>